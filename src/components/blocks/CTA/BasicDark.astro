---
// Basic Dark Call To Action section
// ------------
// Description: A centered call to action section that contains: a title, text, background image, notification and a button.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import CTA from '../../ui/CTA.astro'
import Button from '../../ui/Button.astro'
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Highlight from '../../ui/Highlight.astro'

// Content
import ctaImage from '../../../assets/cta-dark-bg.webp'
import badge from '../../../assets/badge.svg'
---

<Section >
	<Row>
		<Col span="1" />
		<Col span="10">
			<CTA
				title="Join Over 1000+ Satisfied Members!"
				text="Discover why clients trust us to bring their projects to lifeâ€”delivering seamless development, efficient deployment, and outstanding results. Get started today and experience the difference"
				mode="dark"
				bg={ctaImage}
			>
				<ChipNotification radius="rounded-full" classes="mb-6 box">
					<img src="https://foxi.netlify.app/_astro/badge.DNLxsjES_1FknqX.svg" alt="Product of the Year" class="h-12 w-12" slot="button" />
					#Discover0urProduct, <Highlight classes="ml-2">Product View</Highlight>
				</ChipNotification>
				<Button size="lg" style="primary"> View All Products </Button>
			</CTA>
			<Col span="1" />
		</Col>
	</Row>
</Section>
