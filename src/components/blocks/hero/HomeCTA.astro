---
// Home page CTA Section
// ------------
// Description: A centered call to action section that contains: a title, text, a user review snippet, a button and a image.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Button from '../../ui/Button.astro'
import AvatarGroup from '../../ui/AvatarGroup.astro'

// Content
// - Hero Image
import heroImage from '../../../assets/hero-01.png'
// - Avatars
import user1 from '../../../assets/avatars/1.png'
import user2 from '../../../assets/avatars/2.png'
import user3 from '../../../assets/avatars/3.png'
const avatars = [
	{ image: { src: user1.src, alt: 'user name' }, link: '/' },
	{ image: { src: user2.src, alt: 'user name' }, link: '/' },
	{ image: { src: user3.src, alt: 'user name' }, link: '/' }
]
---

<Section id="intro" padding="top" classes="bg-neutral-50 dark:bg-neutral-900">
	<Row>
		<Col span="2" />
		<Col span="8" align="center">
			<ChipNotification radius="rounded-full" classes="mb-6">
				<strong>1000+ </strong> Members
				<AvatarGroup avatars={avatars} radius="rounded-full" slot="button" />
			</ChipNotification>
			
			<h1>
				Unlock the Power of 
				<span class="bg-gradient-to-r from-[#4F46E5] to-[#3B82F6] bg-clip-text font-bold text-transparent">
					AI Agents
				</span>
				<br />for Your Business âœ¨
			</h1>

			<p class="pb-0 text-lg max-w-2xl mx-auto">
				Transform your workflow with intelligent AI agents that work 24/7. 
				Automate tasks, boost productivity, and scale your operations effortlessly.
			</p>
			<Button size="lg" link="#">
				Deploy Agents
			</Button>
		</Col>
		<Col span="2" />
		<Col span="2" />
		<Col span="8">
			<video
				id="videoPlayer"
				src="https://res.cloudinary.com/dwaynojlz/video/upload/v1739650909/saas_jeq7kh.mp4"
				autoplay
				muted
				loop
				class="translate-y-8 rounded-2xl shadow-2xl shadow-neutral-200/50 dark:shadow-neutral-950/50 border border-neutral-200/50 dark:border-neutral-800/50"
			/>
		</Col>
		<Col span="2" />
	</Row>
</Section>


<script>
	document.addEventListener("DOMContentLoaded", () => {
	  const video = document.getElementById("videoPlayer") as HTMLVideoElement;
	  if (video) {
		video.playbackRate = 1.5;
	  }
	});
  </script>