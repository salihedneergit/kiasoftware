---
// Components
import Layout from '../layouts/Layout.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import TextImage from '../components/blocks/basic/TextImage.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqPricing = faqData.filter((faq) => faq.category === 'pricing')
const faqIntegrations = faqData.filter((faq) => faq.category === 'integrations')

// Content
import faqImage1 from '../assets/faq/faq-01.png'
// - SEO
const SEO = {
    title: 'KIA Softwares | AI Agent Platform FAQ',
    description:
        'Get answers to common questions about KIA Softwares AI agent platform. Learn about deploying AI agents, integration capabilities, pricing plans, and how our platform can transform your business operations.'
}
// - Page Header
const header = {
    title: 'Everything You Need to Know About <strong>AI Agents</strong>',
    text: 'Find answers to common questions about building and deploying AI agents with KIA Softwares'
}
---

<Layout title={SEO.title} description={SEO.description}>
    <Hero title={header.title} text={header.text} />
    <FAQ
        title="Understanding Our AI Agent Plans"
        text="Learn about our AI agent deployment plans, pricing structure, and how to choose the right solution for your business needs."
        data={faqPricing}
    />
    <TextImage
        title="Why Choose KIA Softwares for AI Agents"
        text="Our platform offers enterprise-grade AI agent deployment capabilities with unmatched reliability and scalability. From simple task automation to complex workflow management, our AI agents are designed to transform how businesses operate. Each plan includes advanced monitoring tools, seamless integration capabilities, and 24/7 technical support."
        image={faqImage1}
        mobileImage={faqImage1}
        imagePosition="left"
        offsetImage
        classes="bg-neutral-50 dark:bg-neutral-900 lg:!py-64"
    />
    <FAQ
        title="AI Agent Integrations"
        text="Discover how KIA Softwares AI agents integrate with your existing tech stack. From data processing tools to communication platforms, learn how our agents can enhance your workflow automation."
        data={faqIntegrations}
    />
    <CTA />
</Layout>
